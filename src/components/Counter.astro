---
import { CounterUp } from '@/components/CounterUp.tsx'
---

<section class='max-w-6xl mx-auto p-20'>
  <h2
    class='font-tomaso text-4xl lg:text-6xl text-center text-balance mb-10 lg:mb-20'
  >
    Los ESLAND en números
  </h2>
  <div class='grid grid-cols-1 lg:grid-cols-3 gap-x-2'>
    <div class='flex flex-col justify-center items-center'>
      <span
        class='shadow-numbers text-9xl font-bold tabular-nums tracking-tighter'
      >
        <CounterUp client:visible initial={0} final={69.9} decimals={1} /></span
      ><span class='uppercase opacity-70'>de visualizaciones</span>
    </div>
    <div class='flex flex-col justify-center items-center'>
      <span
        class='shadow-numbers text-9xl font-bold tabular-nums tracking-tighter'
      >
        <CounterUp client:visible initial={0} final={227} />
      </span>
      <span class='uppercase opacity-70'>noticias en prensa</span>
    </div>
    <div class='flex flex-col justify-center items-center'>
      <span
        class='shadow-numbers text-9xl font-bold tabular-nums tracking-tighter'
      >
        <CounterUp client:visible initial={0} final={3.2} decimals={1} /></span
      ><span class='uppercase opacity-70'>M€ en medios ganados</span>
    </div>
  </div>
</section>

<style>
  .shadow-numbers {
    text-shadow: 0 0 22px rgba(129, 242, 248, 0.5);
  }
</style>
