---
import Logo from './Logo.astro'

import { getI18N } from '../i18n'
const { currentLocale } = Astro

const i18n = getI18N({ currentLocale })
---

<section
  class='relative z-10 text-xl text-left px-8 max-w-[70ch] mx-auto my-24 text-pretty sm:px-20'
>
  <Logo class='size-16 mb-16 m-auto' />

  <h1
    class='text-4xl font-semibold text-center text-wrap mx-auto mb-10 tracking-wide'
  >
    {i18n.INTRO_TITLE}<br />
    {i18n.INTRO_TITLE_AFTER_BR}
  </h1>

  <p set:html={i18n.INTRO_DESCRIPTION_1} />
  <p set:html={i18n.INTRO_DESCRIPTION_2} />
  <p set:html={i18n.INTRO_DESCRIPTION_3} />
</section>
