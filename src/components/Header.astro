      <a class='text_shadow' href='/info'>INFO</a>

      <a class='text_shadow' href='/archivo'>ARCHIVE</a>

      <LanguageSelectionr />
    </nav>

    <button
      id='menu-toggle'
      class='flex flex-grow basis-0 justify-end text-2xl md:hidden z-50'
    >
      <span id='menu-icon'>â˜°</span>
